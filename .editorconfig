root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_size = 2

[docker-compose*{.yaml,.yml}]
indent_size = 2

[*.twig]
indent_size = 2

[behat.yml]
indent_size = 2

[cghooks.lock]
insert_final_newline = false